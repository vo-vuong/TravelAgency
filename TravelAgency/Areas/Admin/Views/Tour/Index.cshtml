@model PagedList.IPagedList<Model.EF.TOUR>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Quản lý tour
}


@using (Html.BeginForm("Index", "Tour", FormMethod.Get))
{
    <div class="col-md-2">
        Tìm theo tên Tour
    </div>
    <div class="input-group custom-search-form col-md-3">
        <input type="text" class="form-control" placeholder="Search..." value="@ViewBag.SearchString" name="searchString">
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
}
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tên tour</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Ngày đi</th>
                                <th>Địa điểm khởi hành</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeX" id="row_@item.IDTour">
                                    <td>@item.TourName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.DateStart</td>
                                    <td class="center">@item.LocationStart</td>
                                    <td class="center">@((bool)item.Status ? "Hoạt động" : "Đóng")</td>
                                    <td>
                                        <a href="/Admin/Tour/Edit/@item.IDTour">Sửa |</a>
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.IDTour },
                                        new AjaxOptions{
                                            Confirm="Bạn có muốn xóa Tour này?",
                                            OnComplete="#('row_"+item.IDTour+"').remove()",
                                            HttpMethod="Delete"
                                        })
                                        <a href="/Admin/Tour/Detail/@item.IDTour"> | Chi tiết</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber, @searchString = ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>

