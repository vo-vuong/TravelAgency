@model PagedList.IPagedList<Model.EF.CONTENT>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách bài viết
}

@using (Html.BeginForm("Index", "Content", FormMethod.Get))
{
    <div class="col-md-2">
        Tìm theo tên bài viết
    </div>
    <div class="input-group custom-search-form col-md-3">
        <input type="text" class="form-control" placeholder="Search..." value="@ViewBag.SearchContentName" name="searchContentName">
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
}
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách bài viết
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tên bài viết</th>
                                <th>Ngày hiển thị</th>
                                <th>Loại bài viết</th>
                                <th>Người đăng</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeX" id="row_@item.IDContent">
                                    <td>@item.ContentName</td>
                                    <td>@item.dateShow</td>
                                    <td>@item.CONTENTCATEGORY.ContentCategoryName</td>
                                    <td class="center">@item.ACCOUNT.UserName</td>
                                    <td class="center">@((bool)item.status ? "Hoạt động" : "Khóa")</td>
                                    <td>
                                        <a href="/Admin/Content/Edit/@item.IDContent">Sửa |</a>
                                        @Ajax.ActionLink("Xóa","Delete",new { @id=item.IDContent},
                                        new AjaxOptions {
                                            Confirm="Bạn có muốn xóa bài viết này?",
                                            OnComplete = "$('row_" + item.IDContent + "').remove()",
                                            HttpMethod = "Delete"
                                        })
                                        <a href="/Admin/Content/Detail/@item.IDContent"> | Chi tiết</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, pageStart => Url.Action("Index", new { pageStart, @searchContentName = ViewBag.SearchContentName }))
                </div>
            </div>
        </div>
    </div>
</div>





