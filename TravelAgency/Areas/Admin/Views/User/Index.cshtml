@model PagedList.IPagedList<Model.EF.ACCOUNT>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thông tin người dùng
}

@using (Html.BeginForm("Index", "User", FormMethod.Get))
{
    <div class="col-md-2">
        Tìm theo tên đăng nhập
    </div>
    <div class="input-group custom-search-form col-md-3">
        <input type="text" class="form-control" placeholder="Search..." value="@ViewBag.SearchString" name="searchString">
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
}
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tên tài khoản</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Giới tính</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeX" id="row_@item.IDAccount">
                                    <td>@item.UserName</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td class="center">@item.PhoneNumber</td>
                                    <td class="center">@((bool)item.Grener ? "Nam":"Nữ")</td>
                                    <td class="center">@((bool)item.Status ? "Hoạt động" : "Khóa")</td>
                                    <td>
                                        <a href="/Admin/User/Edit/@item.IDAccount">Sửa |</a>
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.IDAccount },
                                        new AjaxOptions
                                        {
                                            Confirm = "Bạn có muốn xóa bản ghi này?",
                                            OnComplete = "$('row_" + item.IDAccount + "').remove()",
                                            HttpMethod = "Delete"
                                        })
                                        <a href="/Admin/User/Detail/@item.IDAccount"> | Chi tiết</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, pageStart => Url.Action("Index", new { pageStart, @searchString = ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>