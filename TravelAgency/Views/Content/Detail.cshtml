@model Model.EF.CONTENT

@{
    ViewBag.Title = "Chi tiết bài viết";
    Layout = "~/Views/Shared/Layout.cshtml";
    var listContentWeek = (List<Model.EF.CONTENT>)ViewBag.ListContentHotWeek;
}

<div class="container">
    <div class="row" style="margin-top: 10px;">
        @* Content detail *@
        <div class="col-xs-12 col-sm-8">
            <h4 style="color: #0071BC;font-weight: bold;">@Model.ContentName</h4>
            <div class="col-xs-12" style="border-bottom: 1px dashed #000000;padding-bottom: 10px;">
                <span class="glyphicon glyphicon-time"></span>&nbsp;@Model.dateShow.DayOfWeek
                <span class="glyphicon glyphicon-calendar"></span>&nbsp;@Model.dateShow
            </div>
            <div class="row">
                <div class="col-xs-12">
                    @Html.Raw(Model.body)
                </div>
                @*<div class="row">
                        <div class="col-xs-12" style="background-color: antiquewhite;">
                            <h4 style="color: #0071BC;font-weight: bold;">BÀI VIẾT LIÊN QUAN</h4>
                            <a href="#" style="text-decoration: none;">
                                <h5><span class="glyphicon glyphicon-menu-right"></span>&nbsp;Xiêu lòng với những cảnh đẹp nên thơ ở chùa Hương</h5>
                            </a>
                            <a href="#" style="text-decoration: none;">
                                <h5><span class="glyphicon glyphicon-menu-right"></span>&nbsp;Mùa hoa phấn phủ hồng trời Bảo Lộc</h5>
                            </a>
                            <a href="#" style="text-decoration: none;">
                                <h5><span class="glyphicon glyphicon-menu-right"></span>&nbsp;Ai bảo Đà Lạt chỉ hợp style mơ mộng? Cool ngầu như đôi bạn thân này vẫn có cả rổ ảnh thần thái</h5>
                            </a>
                            <a href="#" style="text-decoration: none;">
                                <h5><span class="glyphicon glyphicon-menu-right"></span>&nbsp;Nét bình dị Việt Nam qua ảnh của tay máy Hà Lan</h5>
                            </a>
                        </div>
                    </div>*@
            </div>
        </div>
        @* List content week *@
        <div class="col-xs-12 col-sm-4">
            <h4 style="font-weight: bold;color: #0071BC;border-bottom: 1px dashed #000000;padding-bottom: 10px;margin-top: 40px;">Bài viết khác</h4>
            @foreach (var item in listContentWeek)
            {
                <div class="row" style="margin-bottom: 20px;transition-duration: .4s;" id="image">
                    <div class="col-xs-12">
                        <div class="col-xs-12 col-sm-5">
                            <a href="/tin-tuc/chi-tiet/@item.IDContent" style="text-decoration: none;">
                                <img src="@item.Image" class="img-thumbnail">
                            </a>
                        </div>
                        <div class="col-xs-12 col-sm-7">
                            <a href="/tin-tuc/chi-tiet/@item.IDContent" style="text-decoration: none;">
                                <h5 style="color: #0071BC;">@item.ContentName</h5>
                            </a>
                            <span class="glyphicon glyphicon-time"></span>&nbsp;<span style="font-size: 0.95em;">@item.dateShow.DayOfWeek</span>
                            <span class="glyphicon glyphicon-calendar"></span>&nbsp;<span style="font-size: 0.95em;">@item.dateShow</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
